<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:id="@+id/IT_Linear">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8CFFFFFF">

        <ImageView
            android:id="@+id/IT_IM_Anh"
            android:layout_width="109dp"
            android:layout_height="122dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/book"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="11dp" />

        <TextView
            android:id="@+id/IT_TV_Ten"
            android:layout_width="267dp"
            android:layout_height="33dp"
            android:layout_marginStart="10dp"
            android:text="Ten sach 123585454"
            android:textColor="#0E0E0E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.118" />

        <TextView
            android:id="@+id/IT_TV_Gia"
            android:layout_width="96dp"
            android:layout_height="22dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/candal"
            android:foregroundTint="#FFFFFF"
            android:gravity="center|right"
            android:text="TextView"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.513"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/IT_TV_SL"
            android:layout_width="100dp"
            android:layout_height="19dp"
            android:background="@drawable/radius_soluong_sp"
            android:gravity="center"
            android:text="Còn Lại: "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.859" />

        <TextView
            android:id="@+id/IT_TV_TheLoai"
            android:layout_width="135dp"
            android:layout_height="21dp"
            android:layout_marginTop="15dp"
            android:text="Tiểu Thuyết"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.309" />

        <TextView
            android:id="@+id/IT_TV_DanhGia"
            android:layout_width="46dp"
            android:layout_height="19dp"
            android:layout_marginTop="9dp"
            android:drawableLeft="@drawable/ic_star"
            android:text="4"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.408"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
