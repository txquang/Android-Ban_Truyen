<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cit.test">
    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="Book Shop"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.TheLoaiActivity"></activity>
        <activity android:name=".activity.ChiTietSPActivity" />
        <activity android:name=".activity.LichSuDonHangActivity" />
        <activity android:name=".dangnhap.RegisterActivity" />
        <activity android:name=".dangnhap.LoginActivity" />
        <activity android:name=".activity.Home" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>